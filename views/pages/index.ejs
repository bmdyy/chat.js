<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <header>
            <%- include('../partials/header'); %>
        </header>

        <main>
            <table class="table table-dark table-striped table-hover">
                <% messages.forEach(function(msg){ %>
                    <tr>
                        <td class="author">
                            <span class="datetime"><%= msg.datetime.toTimeString().split(" ")[0] %></span>
                            <span class="username"><%= msg.author[0].username %></span>
                        </td>
                        <td class="message"><%= msg.text %></td>
                    </tr>
                <% }); %>
            </table>
        </main>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </body>
</html>